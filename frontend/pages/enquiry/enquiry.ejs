<!DOCTYPE html>
<html lang="en">
  <%- include('../../header', { title: 'Express with EJS' }) %>
  <body>
    <div class="container-scroller">
      <%- include('../../navbar') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('../../sidebar') %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-sm-12">
                        <table
                          id="contactTable"
                          class="table table-bordered table-striped dataTable dtr-inline"
                          role="grid"
                          aria-describedby="tb1_info"
                        >
                          <thead>
                            <tr role="row">
                              <th
                                class="sorting_asc"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="#: activate to sort column descending"
                                aria-sort="ascending"
                              >
                                #
                              </th>
                              <th
                                class="sorting"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="Date &amp;amp; Time: activate to sort column ascending"
                              >
                                Date &amp; Time
                              </th>
                              <th
                                class="sorting"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="Name: activate to sort column ascending"
                              >
                                Name
                              </th>
                              <th
                                class="sorting"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="Email: activate to sort column ascending"
                              >
                                Email
                              </th>
                              <th
                                class="sorting"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="Phone: activate to sort column ascending"
                              >
                                Phone
                              </th>
                              <th
                                class="sorting"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="Message: activate to sort column ascending"
                              >
                                Subject
                              </th>
                              <th
                                class="sorting"
                                tabindex="0"
                                aria-controls="tb1"
                                rowspan="1"
                                colspan="1"
                                aria-label="Action: activate to sort column ascending"
                              >
                                Action
                              </th>
                            </tr>
                          </thead>
                          <tbody id="contactsBody"></tbody>
                          <tfoot>
                            <tr>
                              <th rowspan="1" colspan="1">#</th>
                              <th rowspan="1" colspan="1">Date & Time</th>
                              <th rowspan="1" colspan="1">Name</th>
                              <th rowspan="1" colspan="1">Email</th>
                              <th rowspan="1" colspan="1">Phone</th>
                              <th rowspan="1" colspan="1">Subject</th>
                              <th rowspan="1" colspan="1">Action</th>
                            </tr>
                          </tfoot>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include('../../footer') %>
        </div>
      </div>
    </div>
    <%- include('../../foot') %>

    <!-- Display List Of contact -->
    <script>
      function deleteContact(contactId, row) {
        if (confirm("Are you sure you want to delete this contact?")) {
          $.ajax({
            url: `https://backend.artechworld.tech/api/admin/contact/delete/${contactId}`,
            type: "DELETE",
            success: function (result) {
              alert("Contact deleted successfully.");
              row.remove();
            },
            error: function (xhr, ajaxOptions, thrownError) {
              alert("Error deleting contact.");
            },
          });
        }
      }

      $(document).ready(function () {
        $.get(
          "https://backend.artechworld.tech/api/admin/contact/list-all",
          function (data) {
            if (data.data && data.data.length > 0) {
              data.data.forEach(function (contact, index) {
                const createdAt = new Date(contact.createdAt);
                const formattedDate = `${createdAt.getDate()} ${getMonthName(
                  createdAt.getMonth()
                )} ${createdAt.getFullYear()}`;
                $("#contactsBody").append(`
                        <tr>
                            <td>${index + 1}</td>
                            <td>${formattedDate}</td>
                            <td>${contact.name}</td>
                            <td>${contact.email}</td>
                            <td>${contact.phone}</td>
                            <td class="message" style="max-height: 100px; max-width: 200px; overflow: auto; word-wrap: break-word;">${
                              contact.subject
                            }</td>
                            <td>
                                <a href="#" onclick="deleteContact('${
                                  contact._id
                                }', $(this).closest('tr')); return false;"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    `);
              });
              $("#contactTable").DataTable();
            } else {
              console.log("No data found");
            }
          }
        );
      });

      function getMonthName(monthIndex) {
        const months = [
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
          "November",
          "December",
        ];
        return months[monthIndex];
      }
    </script>
  </body>
</html>
